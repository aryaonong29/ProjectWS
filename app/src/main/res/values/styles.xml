<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tvLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Login Page</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="etEmail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Email</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_below">@+id/tvLogin</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="etPassword">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Password</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_below">@+id/etEmail</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name ="btnLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Login</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">116dp</item>
        <item name="android:layout_marginLeft">37dp</item>
        <item name="android:layout_marginRight">37dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>